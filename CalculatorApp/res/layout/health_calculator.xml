<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/functionPad"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/menuicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_action_side_navigation" />

        <View
            android:id="@+id/adView"
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_alignParentTop="true" >
        </View>

        <ImageView
            android:id="@+id/fitness_heading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:src="@drawable/heading_fitness_calc" />

        <RelativeLayout
            android:id="@+id/testr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fitness_heading"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/metric_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fitness_heading"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="30dip"
                android:src="@drawable/metric_switch" />

            <ImageView
                android:id="@+id/female_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="30dip"
                android:layout_toRightOf="@+id/metric_switch"
                android:src="@drawable/female_selected" />

            <ImageView
                android:id="@+id/male_unselected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:layout_marginTop="30dip"
                android:layout_toRightOf="@+id/female_selected"
                android:src="@drawable/male_unselected" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/testr"
            android:layout_centerHorizontal="true" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/age_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:src="@drawable/age_display" />

                <ImageView
                    android:id="@+id/age_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@+id/age_display"
                    android:src="@drawable/age_bg" />

                <ImageView
                    android:id="@+id/mandatory_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@+id/age_screen"
                    android:src="@drawable/mandatory_mark"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_age_screen"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dip"
                    android:layout_marginTop="8dip"
                    android:layout_toRightOf="@+id/age_display"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="3"
                    android:shadowColor="#0088ff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="25"
                    android:textColor="#c3dcf2"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/height_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_display"
                    android:layout_marginLeft="30dip"
                    android:src="@drawable/height_display" />

                <ImageView
                    android:id="@+id/height_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_display"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@+id/height_display"
                    android:src="@drawable/height_bg_metric" />

                <EditText
                    android:id="@+id/et_height_screen"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_display"
                    android:layout_marginLeft="17dip"
                    android:layout_marginTop="8dip"
                    android:layout_toRightOf="@+id/height_display"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:shadowColor="#0088ff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="25"
                    android:textColor="#c3dcf2"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/height_screen_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_display"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@+id/height_screen"
                    android:src="@drawable/height_bg_standard"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/mandatory_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_display"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@+id/height_screen_2"
                    android:src="@drawable/mandatory_mark"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_height_screen_2"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_display"
                    android:layout_marginLeft="17dip"
                    android:layout_marginTop="8dip"
                    android:layout_toRightOf="@+id/height_screen"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:shadowColor="#0088ff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="25"
                    android:textColor="#c3dcf2"
                    android:textSize="30dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/weight_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/height_display"
                    android:layout_marginLeft="30dip"
                    android:src="@drawable/weight_display" />

                <ImageView
                    android:id="@+id/weight_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/height_display"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@+id/weight_display"
                    android:src="@drawable/weight_bg_metric" />

                <EditText
                    android:id="@+id/et_weight_screen"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/height_display"
                    android:layout_marginLeft="17dip"
                    android:layout_marginTop="8dip"
                    android:layout_toRightOf="@+id/weight_display"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:shadowColor="#0088ff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="25"
                    android:textColor="#c3dcf2"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/mandatory_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/height_display"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@+id/et_weight_screen"
                    android:src="@drawable/mandatory_mark"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/waist_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weight_display"
                    android:layout_marginLeft="30dip"
                    android:src="@drawable/waist_display" />

                <ImageView
                    android:id="@+id/waist_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weight_display"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@+id/waist_display"
                    android:src="@drawable/height_bg_metric" />

                <EditText
                    android:id="@+id/et_waist_screen"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weight_display"
                    android:layout_marginLeft="17dip"
                    android:layout_marginTop="8dip"
                    android:layout_toRightOf="@+id/waist_display"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:shadowColor="#0088ff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="25"
                    android:textColor="#c3dcf2"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/mandatory_waist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weight_display"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@+id/et_waist_screen"
                    android:src="@drawable/mandatory_mark"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/female_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/waist_display" >

                    <ImageView
                        android:id="@+id/wrist_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:src="@drawable/wrist_display" />

                    <ImageView
                        android:id="@+id/wrist_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="3dip"
                        android:layout_toRightOf="@+id/wrist_display"
                        android:src="@drawable/height_bg_metric" />

                    <EditText
                        android:id="@+id/et_wrist_screen"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dip"
                        android:layout_marginTop="8dip"
                        android:layout_toRightOf="@+id/wrist_display"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:shadowColor="#0088ff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="25"
                        android:textColor="#c3dcf2"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/mandatory_wrist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_toRightOf="@+id/et_wrist_screen"
                        android:src="@drawable/mandatory_mark"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/hips_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wrist_display"
                        android:layout_marginLeft="30dip"
                        android:src="@drawable/hips_display" />

                    <ImageView
                        android:id="@+id/hips_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wrist_display"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="3dip"
                        android:layout_toRightOf="@+id/hips_display"
                        android:src="@drawable/height_bg_metric" />

                    <EditText
                        android:id="@+id/et_hips_screen"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wrist_display"
                        android:layout_marginLeft="17dip"
                        android:layout_marginTop="8dip"
                        android:layout_toRightOf="@+id/hips_display"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:shadowColor="#0088ff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="25"
                        android:textColor="#c3dcf2"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/mandatory_hips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wrist_display"
                        android:layout_marginTop="3dip"
                        android:layout_toRightOf="@+id/et_wrist_screen"
                        android:src="@drawable/mandatory_mark"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/forearms_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hips_display"
                        android:layout_marginLeft="30dip"
                        android:src="@drawable/forearms_display" />

                    <ImageView
                        android:id="@+id/forearms_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hips_display"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="3dip"
                        android:layout_toRightOf="@+id/forearms_display"
                        android:src="@drawable/height_bg_metric" />

                    <EditText
                        android:id="@+id/et_forearms_screen"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hips_display"
                        android:layout_marginLeft="17dip"
                        android:layout_marginTop="8dip"
                        android:layout_toRightOf="@+id/forearms_display"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:shadowColor="#0088ff"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="25"
                        android:textColor="#c3dcf2"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/mandatory_forarms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hips_display"
                        android:layout_marginTop="3dip"
                        android:layout_toRightOf="@+id/et_forearms_screen"
                        android:src="@drawable/mandatory_mark"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/bnt_calculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/female_layout"
                    android:layout_marginRight="30dip"
                    android:background="@drawable/x_calculate_btn" />

                <ImageView
                    android:id="@+id/bnt_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/female_layout"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@+id/bnt_calculate"
                    android:background="@drawable/x_clear_btn" />
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_upgrade_parent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/rl_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/upgrade_bg" >

                <ImageView
                    android:id="@+id/upgrade_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/upgrade_bg" />

                <LinearLayout
                    android:id="@+id/ll_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/upgrade_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dip"
                        android:src="@drawable/upgrade_text" />

                    <ImageView
                        android:id="@+id/upgrade_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-14dip"
                        android:src="@drawable/upgrade_close_btn" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <com.devspark.sidenavigation.SideNavigationView
            android:id="@+id/side_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>